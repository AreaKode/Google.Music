<UserControl x:Class="GooglePlayMusic.Desktop.Common.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GooglePlayMusic.Desktop.Common"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <Grid Background="#CC000000" x:Name="Grid">
        <controls:ProgressRing VerticalAlignment="Center" HorizontalAlignment="Stretch" Foreground="{DynamicResource HighlightBrush}"  Margin="12 12 12 12" />
    </Grid>
</UserControl>
