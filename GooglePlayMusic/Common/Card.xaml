<UserControl x:Class="GooglePlayMusic.Desktop.Common.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GooglePlayMusic.Desktop.Common"
             mc:Ignorable="d" 
             Margin="7"
             Cursor="Hand"
             Width="220" Height="360">
    <Grid Background="{DynamicResource GrayBrush10}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Image x:Name="Image" Stretch="UniformToFill" Grid.Row="0"></Image>
        <Border Grid.Row="1" Padding="5, 10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" DockPanel.Dock="Top">
                <TextBlock x:Name="Heading" FontSize="16" Foreground="White" Margin="0, 0, 0, 10"/>
                <Separator/>
                <TextBlock x:Name="Description" Foreground="{DynamicResource GrayBrush6}" TextWrapping="Wrap" Margin="0, 10, 0, 0"></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
